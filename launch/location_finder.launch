<launch>

	<node pkg="location_finder" type="location_finder_node" name="location_finder_node" output="screen" >
   <param name="publish_frequency" value="1000" />
  </node>

  <node pkg="location_finder" type="location_listener_node" name="location_listener_node" output="screen" >
  <param name="publish_frequency" value="1000" />
  </node>

   
   <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0.85 0 0.707 0 base_link camera_link 100" /> 

  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find location_finder)/rviz/location_finder.rviz"/>


	<include file="$(find realsense2_camera)/launch/rs_rgbd.launch">

  <arg name="fisheye_width"       default="640"/>
  <arg name="fisheye_height"      default="480"/>
  <arg name="enable_fisheye"      default="false"/>

  <arg name="depth_width"         default="640"/>
  <arg name="depth_height"        default="480"/>
  <arg name="enable_depth"        default="true"/>

  <arg name="infra_width"         default="640"/>
  <arg name="infra_height"        default="480"/>
  <arg name="enable_infra1"       default="false"/>
  <arg name="enable_infra2"       default="false"/>


  <arg name="color_width"         default="640"/>
  <arg name="color_height"        default="480"/>
  <arg name="enable_color"        default="true"/>
  


  	</include>


  	<include file ="$(find aruco_detect)/launch/aruco_detect.launch">
  		<arg name="camera" default="/camera/color"/> <!-- which mode of camera is used-->
  		<arg name="image" default="image_raw"/>
  		<arg name="fiducial_len" default="0.075"/>  <!-- this is the size/dimension of the marker -->
  	</include>


</launch>
